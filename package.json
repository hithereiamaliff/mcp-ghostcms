{
    "name": "mcp-ghostcms",
    "version": "0.1.0",
    "description": "MCP server for using the Ghost API",
    "main": "build/cli.js",
    "module": "src/server.ts",
    "bin": {
        "ghost-mcp": "build/cli.js"
    },
    "files": [
        "build/",
        ".smithery/"
    ],
    "scripts": {
        "dev": "npx @smithery/cli dev",
        "build": "npm run build:npm && npm run build:smithery",
        "build:npm": "tsc",
        "build:smithery": "npx @smithery/cli build",
        "start": "npm run start:smithery",
        "start:smithery": "node .smithery/index.cjs",
        "prepare": "npm run build:npm",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "publishConfig": {
        "access": "public"
    },
    "keywords": [],
    "author": "hithereiamaliff",
    "license": "ISC",
    "type": "module",
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.16.0",
        "@tryghost/admin-api": "^1.13.13",
        "@tryghost/content-api": "^1.12.0",
        "@types/tryghost__content-api": "^1.3.17",
        "axios": "^1.8.4",
        "jsonwebtoken": "^9.0.2",
        "zod": "^3.24.3"
    },
    "devDependencies": {
        "@smithery/cli": "^1.0.0",
        "@types/axios": "^0.9.36",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^22.18.0",
        "tsx": "^4.20.5",
        "typescript": "^5.8.3"
    }
}
